mod std.memory;

def alloc (T) (a : T) {
    extern (C) GC_malloc (size : u64) -> mut p!void;
    let x = cast!(p!T) (GC_malloc (T::sizeof));
    *x = a;
    return x;
}

def allocBlock (T) (len : u64) {
    extern (C) GC_malloc (size : u64) -> mut p!void;
    return cast!(p!T) (GC_malloc (T::sizeof * len));
}

