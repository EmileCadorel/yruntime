mod std.math;

import std.traits;

public
{
    extern (C) sinf (value : float) -> float;
    extern (C) cosf (value : float) -> float;
    extern (C) abs (value : int) -> int;
    
    imut gPi = 3.14f;
}

def pow if (isNumeric!T) (T) (value : T, exponent : int) -> T
{
    if (exponent > 1)
        return pow (value, exponent - 1) * value;
    return value;
}
